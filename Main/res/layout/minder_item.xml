<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_minder_type"
            android:layout_width="@dimen/padding40"
            android:layout_height="@dimen/padding40"
            android:src="@drawable/important"
            android:scaleType="fitXY"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <TextView
                android:id="@+id/tv_minder_title"
                android:layout_width="fill_parent"
                android:textSize="@dimen/textsize16"
                android:text="@string/default_text"
                android:padding="@dimen/padding_micro"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_minder_create_time"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:textSize="@dimen/textsize_small"
                android:layout_marginTop="@dimen/padding_micro"
                android:layout_marginBottom="@dimen/padding_micro"
                android:text="@string/default_text"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_more"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding_micro"
            android:layout_marginLeft="@dimen/padding_micro"/>
</LinearLayout>