<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jing.du.Main"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="22"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
            android:name="com.jing.du.MainApplication"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:icon="@drawable/app_icon">
        <activity
                android:name=".Activity.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Activity.CreateDiaryActivity"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.DeviceDefault.Light">
        </activity>
        <activity
                android:name=".Activity.DiaryDetailActivity"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.DeviceDefault.Light">
        </activity>
        <activity
                android:name=".Activity.EditDiaryActivity"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.DeviceDefault.Light">
        </activity>
        <activity
                android:name=".Activity.EditDiaryItemActivity"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.DeviceDefault.Light">
        </activity>
        <activity
                android:name=".Activity.CreateMinderActivity"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.DeviceDefault.Light">
        </activity>
    </application>
</manifest>
